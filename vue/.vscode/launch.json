{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against localhost",
        "url": "https://dev.pico.test",
        "webRoot": "${workspaceFolder}",
        "runtimeExecutable": "/usr/bin/chromium",
        "runtimeArgs": [
            "--new-window",
            "-user-data-dir=/tmp/DevProfile",
            "--remote-debugging-port=9222",
            "--disable-background-networking"
        ]
      }
    ]
  }
